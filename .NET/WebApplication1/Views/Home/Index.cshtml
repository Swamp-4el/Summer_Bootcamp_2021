@model IEnumerable<WebApplication1.Models.ConfirmInviteViewModel> 

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-3">Welcome</h1>
    <div>
       @if (User.Identity.IsAuthenticated)
        {
            <h3 class="text-left">Invitations</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>

                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th>
                                @Html.DisplayFor(u => user.UserName)
                            </th>
                            <th>
                                Offers friendship
                            </th>
                            <th>
                                <a class="nav-link text-dark" asp-controller="Invitation" asp-action="Confirm" asp-route-id="@user.Id">Confirm</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
