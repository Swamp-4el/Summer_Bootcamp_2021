@model WebApplication1.Models.ViewModels.EditMessageViewModel

@{ 
    ViewData["Title"] = "Edit message";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label class="control-label" asp-for="Message"></label>
                <input class="form-control" asp-for="Message"/>
                <span class="text-danger" asp-validation-for="Message"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}